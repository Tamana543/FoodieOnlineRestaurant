<%- include('../includes/start.ejs') %>
    <link rel="stylesheet" href="/style/main.css">
       <link rel="stylesheet" href="/style/product.css">
        <link rel="stylesheet" href="/style/form.css">
</head>
<%- include('../includes/navigation.ejs') %>
    <main>
        <!-- <form class="product-form" action="/admin/add-product" method="POST"> -->
            <!-- <%= console.log(validationError) %> -->
            
        <form class="product-form" action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" method="POST" enctype="multipart/form-data"> 
            <!-- enctype ="enctype="application/x-www-form-urlencoded"" is for regular use in ordinary forms -->
            <div class="form-control">
                <label for="title">Title</label>
                <input
                class="<%= validationError.find(e => e.path == 'title' )? 'invalid' : '' %>" 
                type="text" 
                name="title" 
                id="title" 
                value="<%= product.title ? product.title : '' %>">
            </div>
             <!--<div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input
                class="<%= validationError.find(e => e.path == 'imageUrl' )? 'invalid' : '' %>" 
                type="text" 
                name="imageUrl" 
                id="imageUrl" 
                value="<%= product.imageUrl ? product.imageUrl : '' %>">
            </div>
        -->
            <div class="form-control">
                <label for="image">Image</label>
                <input
                type="file" 
                name="image" 
                id="image" 
               >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input
                class="<%= validationError.find(e => e.path == 'price' )? 'invalid' : '' %>" 
                type="number" 
                name="price" 
                id="price" 
                step="0.01" 
                value="<%= product.price ? product.price : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea
                class="<%= validationError.find(e => e.path == 'description' )? 'invalid' : '' %>" 
                name="description" 
                id="description" 
                rows="5"><%= product.description ? product.description : '' %></textarea>
            </div>
          <%if(editing) { %>
          <input type="hidden" name="prodId"  value="<%= product._id %>">
          <%}%>
          <input type="hidden" name="_csrf"  value="<%=csrfToken%>">
            <button class="btn" type="submit"><%= editing ? 'Save Product' : 'Add Product' %></button>
        </form>
      
        <%if(errorMessage) { %>


<div class="user_err"><%= errorMessage %></div>

<% }%>
    </main>
<%- include('../includes/end.ejs') %>